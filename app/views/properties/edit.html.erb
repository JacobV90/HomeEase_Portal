<% content_for :side_content do %>
    <%= bootstrap_form_tag(url:  property_path , method: "put") do |f| %>
      <%= f.text_field :street, :value => @property.street  %>
      <%= f.text_field :city, :value => @property.city %>
      <%= f.text_field :state, :value => @property.state %>
      <%= f.number_field :zipcode, :value => @property.zipcode %>
      <%= f.number_field :price, :value => @property.price%>
      <%= f.number_field :bedrooms, :value => @property.bedrooms %>
      <%= f.number_field :bathrooms, :value => @property.bathrooms %>
      <%= f.text_field :amenities, :value => @property.amenities %>
      <%= f.text_field :description, :value => @property.description %>
      <%= f.submit "Edit property" %>
   <% end %>
<%end%> 