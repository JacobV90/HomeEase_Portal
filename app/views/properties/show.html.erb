<%content_for :side_content do %>
<div class="container-fluid">
    <div class="side-body">
    <%= render "banner" %>
    <%= render partial: "property_widget", :locals => {property: @property} %>
    <div class="btn-group" role="group" aria-label="Basic example">
             <button type="button" class="btn btn-secondary">Edit Property</button>
             <%= button_to "Remove property",{:controller => :properties,
                 :action => 'destroy', :id => @property.id }, :method => :delete %>        
    </div>
    <% (Tenant.where("property_id = '#{@property.id}'")).each do |tenant| %>
                <%= render partial: "tenant_widget", :locals => {tenant: tenant} %>
    <% end %>
        </div>
        </div>
          
<% end %>
