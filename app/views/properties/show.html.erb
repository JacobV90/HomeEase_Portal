
<%content_for :side_content do %>
  <div class="block block-full">
    <h1 class="pull-center" align = "center"><strong>PROPERTIES</strong></h1>
  <br>
  <div class = "row-fluid">
      	  <br>
              <%= render partial: "property_widget", :locals => {property: @property} %>
          <br>
  </div>  
 	
  <br><hr><br>
  <div class = "row-fluid">
      	<h1 class="pull-center" align = "center"><strong>Tenant Information</strong></h1>
  </div>    
      	<br>
  <div class = "row-fluid">
        <% (Tenant.where("property_id = '#{@property.id}'")).each do |tenant| %>
                    <%= render partial: "tenant_widget", :locals => {tenant: tenant} %>
        <% end %>      
  </div>
<br><br>
</div>
    <% end %>
